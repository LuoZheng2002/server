{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "target": "ES2023",                                 
    "module": "NodeNext",                            
    "strict": true,                                  
    "esModuleInterop": true,                         
    "skipLibCheck": true,                            
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "sourceMap": true
  },
  "include": ["src"],                                
  "exclude": ["node_modules", "**/*.spec.ts"]        
}